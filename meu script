MainFrame.Position = UDim2.new(0.5, -210, 0.5, -160)
MainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
MainFrame.BorderSizePixel = 0
MainFrame.Active = true
MainFrame.Draggable = true
MainFrame.Parent = ScreenGui

local TopBar = Instance.new("Frame")
TopBar.Size = UDim2.new(1, 0, 0, 32)
TopBar.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
TopBar.Parent = MainFrame

local Title = Instance.new("TextLabel")
Title.Size = UDim2.new(1, -90, 1, 0)
Title.Position = UDim2.new(0, 10, 0, 0)
Title.BackgroundTransparency = 1
Title.Font = Enum.Font.GothamBold
Title.TextSize = 18
Title.Text = "TI0L0L0 UI"
Title.TextColor3 = Color3.fromRGB(255,255,255)
Title.TextXAlignment = Enum.TextXAlignment.Left
Title.Parent = TopBar

------------------------------------------------------------
-- BOTÕES DA BARRA
------------------------------------------------------------

local function CreateBtn(text, offsetX, color)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0, 32, 1, 0)
    btn.Position = UDim2.new(1, offsetX, 0, 0)
    btn.BackgroundColor3 = color
    btn.Font = Enum.Font.GothamBold
    btn.Text = text
    btn.TextScaled = true
    btn.TextColor3 = Color3.fromRGB(255,255,255)
    btn.Parent = TopBar
    return btn
end

local MinBtn  = CreateBtn("-", -96, Color3.fromRGB(60,60,60))
local MaxBtn  = CreateBtn("+", -64, Color3.fromRGB(60,60,60))
local CloseBtn = CreateBtn("X", -32, Color3.fromRGB(150,0,0))

